{
    "name": "php-lsp/php-lsp",
    "description": "PHP Language Server Protocol",
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/php-lsp/php-lsp/issues",
        "source": "https://github.com/php-lsp/php-lsp"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "homepage": "https://nesk.me"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "libs/*"
        }
    ],
    "require": {
        "php": "^8.1",
        "php-lsp/protocol": "^1.0",
        "php-lsp/rpc-message": "^1.0",
        "php-lsp/rpc-message-contracts": "^1.0",
        "php-lsp/rpc-message-factory": "^1.0",
        "php-lsp/rpc-message-factory-contracts": "^1.0",
        "php-lsp/rpc-protocol-contracts": "^1.0",
        "php-lsp/rpc-protocol-jsonrpc": "^1.0"
    },
    "require-dev": {
        "php-lsp/protocol-generator": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.53",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^10.5|^11.0",
        "rector/rector": "^1.0",
        "symfony/var-dumper": "^6.4|^7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Lsp\\Contracts\\Rpc\\Message\\Factory\\Tests\\": "libs/contracts/rpc-message-factory-contracts/tests",
            "Lsp\\Contracts\\Rpc\\Message\\Tests\\": "libs/contracts/rpc-message-contracts/tests",
            "Lsp\\Contracts\\Rpc\\Protocol\\Tests\\": "libs/contracts/rpc-protocol-contracts/tests",
            "Lsp\\Protocol\\Generator\\Tests\\": "libs/protocol-generator/tests",
            "Lsp\\Protocol\\Tests\\": "libs/protocol/tests",
            "Lsp\\Rpc\\Message\\Factory\\Tests\\": "libs/rpc-message-factory/tests",
            "Lsp\\Rpc\\Message\\Tests\\": "libs/rpc-message/tests",
            "Lsp\\Rpc\\Protocol\\Tests\\": "libs/rpc-protocol-jsonrpc/tests"
        }
    },
    "scripts-aliases": {
        "linter:check": ["linter", "stan", "analyze", "phpstan"],
        "phpcs:fix": ["phpcs", "per2", "per", "percs", "codestyle", "cs"],
        "test:unit": ["phpunit", "unit"],
        "rector:check": ["rector", "upgrade"]
    },
    "scripts": {
        "test": "@test:unit",
        "test:unit": "phpunit --testdox",

        "linter:check": "phpstan analyse --configuration phpstan.neon",
        "linter:baseline": "phpstan analyse --configuration phpstan.neon --generate-baseline",

        "phpcs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --verbose --diff",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --verbose --diff",

        "rector:check": "rector --dry-run --config=rector.php",
        "rector:fix": "rector --config=rector.php"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
