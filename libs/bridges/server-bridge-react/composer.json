{
    "name": "php-lsp/server-bridge-react",
    "description": "RPC Language Server Driver/Bridge based on ReactPHP",
    "type": "library",
    "license": "MIT",
    "keywords": ["runtime", "reactphp", "async", "bridge", "driver", "server", "php", "lsp"],
    "support": {
        "source": "https://github.com/php-lsp/server-bridge-react",
        "issues": "https://github.com/php-lsp/php-lsp/issues"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "homepage": "https://nesk.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "php-lsp/server": "^1.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "psr/event-dispatcher": "^1.0",
        "react/socket": "^1.16"
    },
    "autoload": {
        "psr-4": {
            "Lsp\\Server\\Bridge\\React\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Lsp\\Server\\Bridge\\React\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@test:unit",
        "test:unit": "phpunit --testdox"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
