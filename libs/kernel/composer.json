{
    "name": "php-lsp/kernel",
    "description": "Language Service Protocol Application Kernel",
    "type": "library",
    "license": "MIT",
    "keywords": ["kernel", "core", "php", "lsp"],
    "support": {
        "source": "https://github.com/php-lsp/kernel",
        "issues": "https://github.com/php-lsp/php-lsp/issues"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "homepage": "https://nesk.me"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/container": "^1.0|^2.0",
        "symfony/yaml": "^6.4|^7.0",
        "symfony/config": "^6.4|^7.0",
        "symfony/console": "^6.4|^7.0",
        "symfony/expression-language": "^6.4|^7.0",
        "symfony/dependency-injection": "^6.4|^7.0",
        "php-lsp/hydrator-contracts-implementation": "^1.0",
        "php-lsp/server-contracts-implementation": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Lsp\\Kernel\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Lsp\\Kernel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@test:unit",
        "test:unit": "phpunit --testdox"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
